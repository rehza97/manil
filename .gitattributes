# Auto detect text files and perform LF normalization
* text=auto

# Shell scripts should always use LF
*.sh text eol=lf
docker-entrypoint.sh text eol=lf

# Windows scripts should use CRLF
*.bat text eol=crlf
*.ps1 text eol=crlf

# Python files should use LF
*.py text eol=lf

# JavaScript/TypeScript files should use LF
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf

# CSS/SCSS files should use LF
*.css text eol=lf
*.scss text eol=lf

# HTML/XML files should use LF
*.html text eol=lf
*.xml text eol=lf

# Markdown files should use LF
*.md text eol=lf

# Docker files should use LF
Dockerfile text eol=lf
*.dockerfile text eol=lf
docker-compose.yml text eol=lf

# Config files should use LF

*.conf text eol=lf
*.config text eol=lf
*.ini text eol=lf
*.toml text eol=lf
*.yaml text eol=lf
*.yml text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
