# CloudManager Docker Environment Configuration
# Copy this file to .env before running docker-compose

# Application
APP_NAME=CloudManager
APP_VERSION=1.0.0
DEBUG=False

# Database
DB_PASSWORD=cloudmanager_secure_password_change_me
DATABASE_URL=postgresql+asyncpg://cloudmanager:cloudmanager_secure_password_change_me@postgres:5432/cloudmanager

# Redis
REDIS_PASSWORD=redis_secure_password_change_me
REDIS_URL=redis://:redis_secure_password_change_me@redis:6379/0

# JWT
JWT_SECRET_KEY=your-super-secret-jwt-key-min-32-characters-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Security
BCRYPT_ROUNDS=12
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# Email (Configure based on your provider)
EMAIL_PROVIDER=smtp
EMAIL_FROM=noreply@cloudmanager.dz
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=True

# SendGrid (if using SendGrid instead of SMTP)
# EMAIL_PROVIDER=sendgrid
# SENDGRID_API_KEY=your-sendgrid-api-key

# SMS (Twilio)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890

# Cache TTL (seconds)
CACHE_DEFAULT_TTL=300
CACHE_SESSION_TTL=3600
CACHE_USER_TTL=600

# VPS Docker Engine Mode
# - auto: prefer docker-socket-proxy, fallback to Docker-in-Docker
# - proxy: always use host Docker via docker-socket-proxy (builds on host)
# - dind: always use Docker-in-Docker inside VPS (builds inside VPS container)
VPS_DOCKER_ENGINE_MODE=dind
